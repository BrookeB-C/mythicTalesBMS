{
  "name": "@mythic-tales/ui-shell",
  "version": "0.1.0",
  "description": "Enterprise component library for Mythic Tales BMS",
  "type": "module",
  "main": "dist/mt-ui.umd.js",
  "module": "dist/mt-ui.es.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "vite dev --host",
    "build": "tsc -p tsconfig.build.json && vite build",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "storybook": "storybook dev -p 6006 -c storybook",
    "build-storybook": "storybook build -c storybook",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": ["mythic-tales", "lit", "web-components", "enterprise"],
  "author": "Mythic Tales BMS Platform Team",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.16.0",
    "npm": ">=9.5.0"
  },
  "dependencies": {
    "lit": "^3.1.2"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^7.6.12",
    "@storybook/addon-essentials": "^7.6.12",
    "@storybook/web-components-vite": "^7.6.12",
    "@types/node": "^20.11.19",
    "@vitejs/plugin-legacy": "^5.1.0",
    "happy-dom": "^13.6.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "@webcomponents/webcomponentsjs": "^2.8.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-lit": "^1.9.3",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "storybook": "^7.6.12",
    "tslib": "^2.6.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.2",
    "vite": "^5.1.4",
    "vitest": "^1.4.0"
  }
}
