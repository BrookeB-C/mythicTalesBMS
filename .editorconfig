# Top-level EditorConfig to keep formatting consistent across editors
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.java]
indent_style = space
indent_size = 2

[*.{html,css,js,json,yml,yaml,md}]
indent_style = space
indent_size = 2

